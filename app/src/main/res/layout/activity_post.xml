<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:id="@+id/add_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Post"
        android:textSize="50sp"
        android:layout_marginTop="30dp"/>


    <EditText
        android:id="@+id/editText_Game_name"
        android:hint="Game Name"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_post"
        android:layout_marginTop="100dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"/>

    <EditText
        android:id="@+id/editText_Place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Game Location"
        android:layout_below="@id/editText_Game_name"
        android:inputType="textMultiLine"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"/>


    <EditText
        android:id="@+id/editText_Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Game Time"
        android:layout_below="@id/editText_Place"
        android:inputType="time"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"/>

    <!--<EditText
        android:id="@+id/editText_Team"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_Time"
        android:hint="Maximum no. of participants for the game"
        android:inputType="textMultiLine|number"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp" />
-->
    <EditText
        android:id="@+id/editText_Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText_Time"
        android:hint="Date"
        android:inputType="textMultiLine|date"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp" />


    <Button
        android:id="@+id/bt_Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
